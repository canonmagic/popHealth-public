<div data-controller="dashboard" class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Initial Patient Pop</h2>
                </div>
                <div class="panel-body">
                    <h3>0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Numerator</h2>
                </div>
                <div class="panel-body">
                    <h3>0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">Denominator</h2>
                </div>
                <div class="panel-body">
                    <h3>0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Relation</h2>
                </div>
                <div class="panel-body">
                    <h3>0/0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <hr/>
            <div class="panel">
                <div class="panel-heading">
                    <h2 class="panel-title"><span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Define your filters</h2>
                </div>
                <div class="panel-body panel-filter">
                    <br>
                    <button type="button" class="btn btn-info"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Patients</button>
                    <button type="button" class="btn btn-info"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Providers</button>
                    <hr/>
                    <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete filters</button>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <hr/>
            <table class="table">
                <thead>
                    <tr class="info">
                        <th>MEASURE ID</th>
                        <th>MEASURE NAME</th>
                        <th>MEASUREMENT PERIOD</th>
                        <th>DESCRIPTION</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= @measure.cms_id %></td>
                        <td><%= @measure.title %></td>
                        <td><%= @measure.created_at %></td>
                        <td><%= @measure.description %></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-12">
            <hr/>
            <ul class="nav nav-tabs nav-justified" id="tabs-data">
                <li role="presentation" class="active"><a data-toggle="tab" href="#measuretab">Measure</a></li>
                <li role="presentation"><a data-toggle="tab" href="#patientstab">Patients</a></li>
                <li role="presentation"><a data-toggle="tab" href="#providerstab">Provider Teams</a></li>
            </ul>
            <div class="tab-content">
                    <div id="measuretab" class="tab-pane fade in active">
                        <table class="table">
                            <thead>
                                <tr class="info">
                                    <th>Population Criteria</th>
                                    <th>Terminology</th>
                                    <th>Data Criteria</th>
                                    <th>Definition</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                </tr>
                            </tbody>
                        </table> 
                    </div>
                    <div id="patientstab" class="tab-pane fade">
                        <table class="table">
                            <thead>
                                <tr class="info">
                                    <th>Patient Id</th>
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>Age</th>
                                    <th>DOB</th>
                                    <th>Gender</th>
                                    <th>Test</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="providerstab" class="tab-pane fade">
                        <table class="table">
                            <thead>
                                <tr class="info">
                                    <th>Team Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        
        </div>
    </div>
</div>

