<div data-controller="jobs" class="col-md-12">

    <div class="panel panel-primary">

        <div class="panel-heading">
            <h3 class="panel-title"><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> Background Jobs</h3>
        </div>

        <div class="panel-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th style="width:10%;">Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Jobs</td>
                        <td><%= @job_count %></td>
                    </tr>
                    <tr>
                        <td>Measure</td>
                        <td><%= @calculation_job_count%></td>
                    </tr>
                    <tr>
                        <td>Patient</td>
                        <td><%= @patient_job_count%></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="panel-footer panel-primary">
            <%= button_to "/admin/remove_jobs", method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete all jobs?' } do %>
                <span class="glyphicon glyphicon-trash"></span> Delete All Jobs
            <% end %>
        </div>
    </div>
</div>
