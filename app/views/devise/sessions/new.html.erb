<div data-controller="session" class="col-md-12 login-container">
    
    <div class="col-md-5 form-login-container">

        <div class="branding-container">

            <h1 class="logo">&reg; POPHEALTH</h1>
            <p class="slogan">Empowering Health Together</p>
            
        
        </div>

        <div>
            <h2>Login</h2>
        </div>




        <%= form_for(resource, :as => resource_name,:url => session_path(resource_name), :html => { :name => "login_form" }) do |log| %>

            <div class="data-login-container">

                <% if flash[:error].blank? %>

                    <div class="header-alert">
                        <% current_user.to_json %>
                        <%= content_tag(:div, flash[:error], id: "flash_error", class: "alert alert-error") if flash[:error] %>
                        <%= content_tag(:div, flash[:notice], id: "flash_notice", class: "alert alert-info") if flash[:notice] %>
                        <%= content_tag(:div, flash[:alert], id: "flash_alert", class: "alert alert-warning") if flash[:alert] %>
                    </div>

                <% else %>

                <div>

                    <p class="help-block" id="help-block-sing-in">
                        <strong>Please enter your username and password to sign in. If you don't have an account, you can <a href="<%= new_registration_path(resource_name) %>">sign up here</a></strong>
                    </p>
                    
                </div>

                <% end %>


                <div class="form-group">
                
                    <label for="usernameLogin">Username</label>

                    <%= log.text_field :username, class:"form-control", placeholder: "Enter username", id:"usernameLogin"%>
                
                </div>

                <div class="form-group">

                    <label for="passwordLogin">Password</label>

                    <%= log.password_field :password, class:"form-control", placeholder:"Enter password", id:"passwordLogin" %>

                </div>

                <div class="checkbox">

                    <label>
                        <input type="checkbox" data-action="click->session#togglePassword" id="showPassword">Show Password
                    </label>
                
                
                </div>

                <div>

                    <%= log.submit "SIGN IN", class:"btn btn-success button-login" %>


                </div>
        
            </div> 

        <% end %>


        <div class="links-login-container">

            <%= render :partial => "devise/shared/links" %>

        </div>

    </div>

</div>